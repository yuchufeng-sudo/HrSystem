<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.hr.mapper.HrCertificationMapper">

    <resultMap type="HrCertification" id="HrCertificationResult">
        <result property="id"    column="id"    />
        <result property="enterpriseId"    column="enterprise_id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="issuingOrg"    column="issuing_org"    />
        <result property="certType"    column="cert_type"    />
        <result property="description"    column="description"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="trainingId"    column="training_id"    />
    </resultMap>

    <sql id="selectHrCertificationVo">
        select id, enterprise_id, code, name, issuing_org, cert_type, description, create_by, create_time, update_by, update_time, remark, training_id from hr_certification
    </sql>

    <select id="selectHrCertificationList" parameterType="HrCertification" resultMap="HrCertificationResult">
        <include refid="selectHrCertificationVo"/>
        <where>
            <if test="enterpriseId != null  and enterpriseId != ''"> and enterprise_id = #{enterpriseId}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name ILIKE concat('%', #{name}, '%')</if>
            <if test="issuingOrg != null  and issuingOrg != ''"> and issuing_org = #{issuingOrg}</if>
            <if test="certType != null  and certType != ''"> and cert_type = #{certType}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="trainingId != null "> and training_id = #{trainingId}</if>
        </where>
    </select>

    <select id="selectHrCertificationById" parameterType="Long" resultMap="HrCertificationResult">
        <include refid="selectHrCertificationVo"/>
        where id = #{id}
    </select>


</mapper>
