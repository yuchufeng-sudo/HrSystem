<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.hr.mapper.HrTargetNotesMapper">

    <resultMap type="HrTargetNotes" id="HrTargetNotesResult">
        <result property="id"    column="id"    />
        <result property="targetId"    column="target_id"    />
        <result property="content"    column="content"    />
        <result property="author"    column="author"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHrTargetNotesVo">
        select id, target_id, content, author, create_by, create_time, update_by, update_time, remark from hr_target_notes
    </sql>

    <select id="selectHrTargetNotesList" parameterType="HrTargetNotes" resultMap="HrTargetNotesResult">
        <include refid="selectHrTargetNotesVo"/>
        <where>
            <if test="targetId != null "> and target_id = #{targetId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="author != null  and author != ''"> and author = #{author}</if>
        </where>
    </select>


</mapper>
