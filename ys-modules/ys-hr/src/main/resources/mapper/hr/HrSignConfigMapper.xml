<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.hr.mapper.HrSignConfigMapper">

    <resultMap type="com.ys.hr.domain.HrSignConfig" id="HrSignConfigResult">
        <result property="id"    column="id"    />
        <result property="signType"    column="sign_type"    />
        <result property="signConfig"    column="sign_config"    />
        <result property="status"    column="status"    />
        <result property="enterpriseId"    column="enterprise_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="platformName"    column="type_name"    />
        <result property="apiUrl"    column="api_url"    />
        <result property="typeValue"    column="type_value"    />
    </resultMap>

    <sql id="selectHrSignConfigVo">
        select id, sign_type, sign_config, status, enterprise_id, create_by, create_time, update_by, update_time, remark from hr_sign_config
    </sql>

    <select id="selectHrSignConfigList" parameterType="com.ys.hr.domain.HrSignConfig" resultMap="HrSignConfigResult">
        SELECT
            hsc.id,
            hsc.sign_type,
            hsc.sign_config,
            hsc.status,
            hsc.enterprise_id,
            hsc.create_by,
            hsc.create_time,
            hsc.update_by,
            hsc.update_time,
            hsc.remark,
            hspt.type_name
        FROM
            hr_sign_config hsc
            LEFT JOIN hr_sign_platform_type hspt ON hsc.sign_type = hspt.id
        AND hspt.is_disabled = 0
        <where>
            <if test="signType != null  and signType != ''"> and hsc.sign_type = #{signType}</if>
            <if test="signConfig != null  and signConfig != ''"> and hsc.sign_config = #{signConfig}</if>
            <if test="status != null  and status != ''"> and hsc.status = #{status}</if>
            <if test="enterpriseId != null  and enterpriseId != ''"> and hsc.enterprise_id = #{enterpriseId}</if>
        </where>
    </select>

    <select id="selectHrSignConfigById" parameterType="Long" resultMap="HrSignConfigResult">
        <include refid="selectHrSignConfigVo"/>
        where id = #{id}
    </select>

    <select id="selectBySignType" parameterType="Integer" resultMap="HrSignConfigResult">
        <include refid="selectHrSignConfigVo"/>
        where sign_type = #{signType}
    </select>

    <update id="updateByStatus">
        update hr_sign_config
        set
            status = '0'
        where
            status = '1'
    </update>

    <select id="selectConfigInfo" parameterType="Integer" resultMap="HrSignConfigResult">
        SELECT
            hsc.id,
            hsc.sign_type,
            hsc.sign_config,
            hsc.status,
            hsc.enterprise_id,
            hsc.create_by,
            hsc.create_time,
            hsc.update_by,
            hsc.update_time,
            hsc.remark,
            hspt.type_name,
            hspt.api_url,
            hspt.type_value
        FROM
            hr_sign_config hsc
                LEFT JOIN hr_sign_platform_type hspt ON hsc.sign_type = hspt.id
                AND hspt.is_disabled = 0
        where hsc.id = #{signaturePlatformId}
    </select>
</mapper>
