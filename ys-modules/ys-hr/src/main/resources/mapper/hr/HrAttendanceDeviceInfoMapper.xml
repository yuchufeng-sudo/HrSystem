<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.hr.mapper.HrAttendanceDeviceInfoMapper">

    <resultMap type="com.ys.hr.domain.HrAttendanceDeviceInfo" id="HrAttendanceDeviceInfoResult">
        <result property="id"    column="id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceSn"    column="device_sn"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHrAttendanceDeviceInfoVo">
        select id, device_name, device_sn, create_by, create_time, update_by, update_time, remark from hr_attendance_device_info
    </sql>

    <select id="selectHrAttendanceDeviceInfoList" parameterType="com.ys.hr.domain.HrAttendanceDeviceInfo" resultMap="HrAttendanceDeviceInfoResult">
        <include refid="selectHrAttendanceDeviceInfoVo"/>
        <where>
            <if test="deviceName != null  and deviceName != ''"> and device_name ILIKE concat('%', #{deviceName}, '%')</if>
            <if test="deviceSn != null  and deviceSn != ''"> and device_sn = #{deviceSn}</if>
        </where>
    </select>

    <select id="selectHrAttendanceDeviceInfoById" parameterType="Long" resultMap="HrAttendanceDeviceInfoResult">
        <include refid="selectHrAttendanceDeviceInfoVo"/>
        where id = #{id}
    </select>

    <select id="selectAllSn" resultType="java.lang.String">
        select device_sn from hr_attendance_device_info
    </select>
</mapper>
