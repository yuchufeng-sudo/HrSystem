<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.hr.mapper.HrEmpSchedulingMapper">

    <resultMap type="HrEmpScheduling" id="HrEmpSchedulingResult">
        <result property="schedulingId"    column="scheduling_id"    />
        <result property="schedulingType"    column="scheduling_type"    />
        <result property="weekDays"    column="week_days"    />
        <result property="monthDaysOff"    column="month_days_off"    />
        <result property="dailySchedule"    column="daily_schedule"    />
        <result property="paidVacationDays"    column="paid_vacation_days"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="restStartTime"    column="rest_start_time"    />
        <result property="restEndTime"    column="rest_end_time"    />
        <result property="defaultStartTime"    column="default_start_time"    />
        <result property="defaultEndTime"    column="default_end_time"    />
        <result property="schedulingName"    column="scheduling_name"    />
        <result property="enterpriseId"    column="enterprise_id"    />
    </resultMap>

    <sql id="selectHrEmpSchedulingVo">
        select scheduling_id, scheduling_type, week_days, month_days_off, daily_schedule, paid_vacation_days, create_by, create_time, update_by, update_time, remark, user_id,default_start_time,default_end_time,rest_end_time,rest_start_time,scheduling_name      from hr_emp_scheduling
    </sql>

    <select id="selectHrEmpSchedulingList" parameterType="HrEmpScheduling" resultMap="HrEmpSchedulingResult">
        <include refid="selectHrEmpSchedulingVo"/>
        <where>
            <if test="schedulingType != null  and schedulingType != ''"> and scheduling_type = #{schedulingType}</if>
            <if test="weekDays != null  and weekDays != ''"> and week_days = #{weekDays}</if>
            <if test="monthDaysOff != null  and monthDaysOff != ''"> and month_days_off = #{monthDaysOff}</if>
            <if test="dailySchedule != null  and dailySchedule != ''"> and daily_schedule = #{dailySchedule}</if>
            <if test="paidVacationDays != null  and paidVacationDays != ''"> and paid_vacation_days = #{paidVacationDays}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="enterpriseId != null  and enterpriseId != ''"> and enterprise_id = #{enterpriseId}</if>
        </where>
    </select>

    <select id="selectHrEmpSchedulingBySchedulingId" parameterType="string" resultMap="HrEmpSchedulingResult">
        <include refid="selectHrEmpSchedulingVo"/>
        where scheduling_id = #{schedulingId}
    </select>


</mapper>
